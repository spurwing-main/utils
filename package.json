{
  "name": "@tim-spw/utils",
  "version": "0.1.5",
  "type": "module",
  "files": ["loader.js", "features/video/**/*.js", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "node --test",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe .",
    "format": "biome check --formatter-enabled=true --linter-enabled=false .",
    "format:write": "biome format --write .",
    "check": "npm run format && npm run lint && npm test",
    "clean": "rm -rf node_modules .npm-cache",
    "prepublishOnly": "node scripts/sync-version.js"
  },
  "exports": {
    ".": "./loader.js",
    "./loader.js": "./loader.js",
    "./video": "./features/video/index.js",
    "./features/*": "./features/*"
  },
  "sideEffects": [
    "loader.js",
    "features/**"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "jsdom": "^24.0.0"
  }
}
