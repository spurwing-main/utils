{
  "name": "@tim-spw/utils",
  "version": "0.1.10",
  "type": "module",
  "files": [
    "loader.js",
    "features/video/**/*.js",
    "features/marquee/**/*.js",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "node --test",
    "lint": "biome lint .",
    "format": "biome check --formatter-enabled=true --linter-enabled=false .",
    "check": "npm run format && npm run lint && npm test",
    "clean": "rm -rf node_modules .npm-cache"
  },
  "exports": {
    ".": "./loader.js",
    "./video": "./features/video/index.js",
    "./marquee": "./features/marquee/index.js",
    "./features/*": "./features/*"
  },
  "sideEffects": [
    "loader.js",
    "features/**"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "jsdom": "^24.0.0",
    "math-intrinsics": "^1.1.0"
  },
  "overrides": {
    "get-intrinsic": "1.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spurwing-main/utils.git"
  },
  "bugs": {
    "url": "https://github.com/spurwing-main/utils/issues"
  },
  "homepage": "https://github.com/spurwing-main/utils#readme"
}
